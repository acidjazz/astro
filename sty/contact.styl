.contact
  .banner
    height 100%
    > .inner
      position relative
      width 100%
      height 100%
      background-image url('/img/contact/banner.jpg')
      background-position 50% 50%
      background-size cover
      background-repeat no-repeat
      animation fadeIn 0.5s 0s ease-in both
      &.on
        display block
      &.off
        display none
      > .copy
        position absolute
        left 0
        top 50%
        width 100%
        font f_h1
        color: c.white1
        text-align center
        height 110px
        margin-top -55px
        animation cellInY 0.75s 0s ease-in both


