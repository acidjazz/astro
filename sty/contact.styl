.contact
  .banner
    height 800px
    background-color: c.black1
    > .inner
      position relative
      width 100%
      height 100%
      background-image url('/img/contact/space.jpg')
      background-position 50% 50%
      background-size 150%
      background-repeat no-repeat
      animation slowzoom 30s linear 5s infinite alternate
      &.on
        display block
      &.off
        display none
      > .copy
        position absolute
        left 0
        top 50%
        width 100%
        color: c.white1
        text-align center
        height 110px
        margin-top -55px
        animation cellInY 0.75s 0s ease-in both
        > .lcopy
          font f_h2
        > .scopy
          font f_h3

  > .block
    background-color: c.black4
    > .inner
      text-align center
      padding 50px
      desktop()
      > .copy, > .scopy
        font f_h2
        color: c.white1
      > .scopy
        font f_h3



  > #map
    height 400px

