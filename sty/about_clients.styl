
.engage
  > .title 
    font f_h2
    margin 50px 0 0 170px
  > .ways
    text-align center
    padding 16px
    > .way
      text-align left
      display inline-block
      vertical-align top
      width 260px
      padding 20px
      margin 16px
      > .title
        font f_h3
        text-transform uppercase
        > span
          color: c.red1
      > .copy
        font f_copyl
      > .example
        padding 30px 0 10px 0
        border-bottom: 1px solid c.black1
        > a
          text-decoration none
          color: c.blue1

.clients
  padding 16px
  text-align center
  > .client
    display inline-block
    vertical-align top
    width 250px
    height 130px
    background-color: c.white3
    animation cellInX 0.2s 0s ease-in both
    padding 16px
    for num in 0..25
      &:nth-child({num})
              animation-delay unit(num*0.05, 's')
    > .inner
      width 100%
      height 100%
      background-position 50% 50%
      background-size cover
      background-repeat no-repeat

