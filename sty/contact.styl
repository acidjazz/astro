.contact
  .banner
    height 800px
    background-color: c.black1
    > .inner
      position relative
      width 100%
      height 100%
      background-image url('/img/contact/space.jpg')
      background-position 50% 50%
      background-size 150%
      background-repeat no-repeat
      animation slowzoom 30s linear 5s infinite alternate
      &.on
        display block
      &.off
        display none
      > .copy
        position absolute
        left 0
        top 50%
        width 100%
        color: c.white1
        text-align center
        height 110px
        margin-top -55px
        animation cellInY 0.75s 0s ease-in both
        > .lcopy
          font f_h3
        > .scopy
          font f_h3

  > .block
    background-color: c.black4
    > .inner
      text-align center
      padding 100px
      desktop()
      > .copy, > .scopy
        color: c.white1
        margin auto
        line-height 24px
  > #map
    height 400px

  > .engage
    max-width 1125px
    margin auto
    > .title 
      font f_h3m
      padding 100px 0 0 16px
    > .ways
      text-align center
      padding 16px
      > .way
        text-align left
        display inline-block
        vertical-align top
        width 28.5%

        padding 20px
        margin 16px
        animation cellInX 0.2s 0s ease-in both
        &:nth-child(1)
          padding 20px 20px 20px 0
          margin 16px 16px 16px 0
        &:nth-child(3)
          padding 20px 0 20px 20px
          margin 16px 0 16px 16px

        > .title
          font f_h5
          text-transform uppercase
          padding 0 0 16px 0
        > .example
          padding 30px 0 10px 0
          > a
            text-decoration none
            color: c.red1
  > .officeimage
    desktop()
    > img
      width 100%

@media all and (min-width: 1px) and (max-width: 1000px)
  .contact
    > .banner
      height 100%
      > .inner
        height 100%
        animation none
        background-size cover
        > .copy
          margin-top -50px
    > .engage
      > .ways
        > .way
          float none
          width 90%
          margin auto !important
          padding 10px !important
