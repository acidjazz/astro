.projects

  .summary
    background-color: c.blue3
    min-height 600px

    &.on
      display block
    &.off
      display none
    > .hero
      color: c.white1
      padding 60px 20px
      > .copy1
        max-width 800px
        margin auto
        text-transform uppercase
      > .copy2
        font f_h2
        max-width 800px
        margin auto
.projects > .summary > .thumbs, .related > .relateds, .index > .projects
  > .thumb
    &.on
      display block
    &.off
      display none
    float left
    width 33.333%
    height 300px
    cursor pointer
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    animation cellInY 0.2s 0s ease-in both
    transition background-position 0.2s linear
    &:hover
      background-position 100% auto
    for num in 0..10
      &:nth-child({num})
        animation-delay unit(num*0.05, 's')
    for key, project in data.project
      &.thumb_{project.folder}:hover > .inner
        background-color: rgba(c[project.color], 0.75)
    > .inner
      height 100%
      transition background-color 0.1s linear
      > .copy
        color: c.white1
        text-align center
        // 80px high
        // 150 - ( 80 / 2 )
        padding 110px 0 0 0
        > .name
          font f_h2
        > .filters
          text-transform uppercase
        

.projects

  > .project
    min-height 600px
    &.on
      display block
      > .cover, > .body > .image > img
        display block
    &.off
      display none
      > .cover, > .body > .image > img
        display none


    > .cover
      height 600px
      position relative
      background-size cover
      background-repeat no-repeat
      background-position 50% 50%
      > .copy
        position absolute
        left 0
        top 50%
        margin-top unit(-(120/2), px)
        height 120px
        width 100%
        > .name, > .filters
          color: c.white1
          text-align center
        > .name
          font f_h1
        > .filters
          color: c.white1
          text-transform uppercase
          font f_copyn
          letter-spacing 2px
    > .description
      padding 40px 20px 60px 20px
      > .copy
        font f_h2
        color: c.white1
        max-width 1020px
        margin auto

   > .body
      min-height 2000px
      > .youtube
        width 800px
        height 450px
        margin auto
      > .image
        padding 50px 0
        width 100%
        &.pad_both
          padding 50px 0
        &.pad_top
          padding 50px 0 0 0
        &.pad_bottom
          padding  0 0 50px 0
        &.pad_none
          padding  0 0 0 0
        > img
          width inherit
        > .img
          //height 600px
          padding-top 60%
          background-size cover
          background-repeat no-repeat
          background-position 50% 50%
      > .copy
        padding 50px
        line-height 30px
        max-width 600px
        margin auto

      > .imagecopy
        padding 50px
        &.pad_bottom
          padding 0 0 50px 0
        desktop()
        &.black
          background-color: c.black1
        &.nopadding
          padding 0px
        > .block.left
          float left
          width 50%
          height 100%
        > .block.right
          float right
          width 50%
          height 100%
        > .block
          height inherit
          > .image
            width 100%
            height inherit
            text-align center
            > img
              height inherit
            > .img
              height 100%
              background-size cover
              background-repeat no-repeat
              background-position 50% 50%
          &.copy
            display table
            > .copy
              line-height 30px
              max-width 600px
              padding 0 50px
              display table-cell
              vertical-align middle
              margin auto
              &.white
                color: c.white1
     
    > .related
      > .title
        font f_h3
        text-align center
        padding 20px
        color: c.white1
        for key, project in data.project
          &.title_{project.folder}
            background-color: c[project.color]
    > .credits
      for key, project in data.project
        &.credits_{project.folder} > .inner > .sections > .section > .title
          color: c[project.color]
      > .inner
        desktop()
        padding 50px
        > .title
          font f_h2
        > .sections
          > .section
            float left
            width 33.33%
            > .title
              font f_h3
              color: orange
              margin 0 0 10px 0
            > .item, > a.item
              display block
              margin 0 0 10px 0
              text-decoration none
              color: c.black1

.projects > .project, .projects > .summary
    > .filters
      background-color: c.black2
      color white
      text-transform uppercase
      &.float
        bottom 0
        width 100%
        position fixed
      > .inner
        desktop()
        > .title
          float left
          padding 20px 0 20px 0px
        > .filtermenu
          float right
          padding 0 50px 0 0
          > .filter
            cursor pointer
            float left
            padding 20px
            for key, project in data.project
              &.filter_{project.folder}.active
                background-color: c[project.color]
              &.filter_{project.folder}:hover
                background-color: rgba(c[project.color], 0.25)
 
.projects > .summary
  > .filters
    > .inner
      max-width none
      > .title
        display none
      > .filtermenu
        > .filter
          transition background-color 0.1s linear
          &:hover
            background-color: rgba(c.white1, 0.5)
          &.on
            background-color: c.white1
            color: c.black1

