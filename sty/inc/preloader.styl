.preloader
  height 100%
  text-align center
  background-color: c.black2
  &.on
    display block
  &.off
    display none

  > .box
    display inline-block
    width 30px
    height 30px
    position relative
    border: 4px solid c.white1
    top 50%
    animation preloader 2s infinite ease

    > .inner
      vertical-align top
      display inline-block
      width 100%
      background-color: c.white1
      animation preloader-inner 2s infinite ease-in

  for key, project in data.project
    &.preloader_{project.folder} > .box > .inner
      background-color: c[project.color]

@keyframes preloader
  0%
    transform rotate(0deg)
  25%
    transform rotate(180deg)
  50%
    transform rotate(180deg)
  75%
    transform rotate(360deg)
  100%
    transform rotate(360deg)

@keyframes preloader-inner
  0%
    height 0%
  25%
    height 0%
  50%
    height 100%
  75%
    height 100%
  100%
    height 0%

