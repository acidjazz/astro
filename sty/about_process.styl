
.process
  background-color: c.white1
  > .steps
    padding 100px 16px
    text-align center
    max-width 1125px
    margin auto

    > .step
      text-align left
      background-color: c.white3
      padding 40px
      width 260px
      height 600px
      margin 16px
      display inline-block
      vertical-align top
      animation cellInX 0.2s 0s ease-in both
      for num in 0..3
        &:nth-child({num})
          animation-delay unit(num*0.1, 's')
      &.space
        background-color: c.blue4
        > .image
          margin 325px 0 0 0
      > .image
        width 233px
        height 157px
      > .title
        font f_h4
        text-transform uppercase
        color: c.red1
        padding 20px 0 0 0
      > .copy
        margin -10px 0 0 0
        p

    
@media all and (min-width: 1px) and (max-width: 1000px)
  .process
    > .steps
      padding 20px 0
      > .step
        padding 20px 
        margin 10px auto
        display block

