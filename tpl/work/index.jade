
extends ../inc/layout

block variables
  - var rootdir = '../'

block content
  include ../inc/top

  .projects

    // SUMMARY OF PROJECTS
    .summary.off
      .hero
        .copy1 change this
        .copy2 Weâ€™ve been creating the future for a while now.
      .thumbs
        each project in data.project
          .thumb.on(
            class='thumb_' + project.folder,
            data-project=project.folder,
            style='background-image: url("../img/project/' + project.folder + '/1440/' + project.cover + '");',
            data-filters=project.filters
          )
            .inner
              .copy
                .name #{project.name}
                .filters !{project.filters.join('&nbsp;&nbsp;/&nbsp;&nbsp;')}
      .clear
      .filters.float
        .inner
          .title CAPABILITIES
          .filtermenu
            each filter in data.filters
              if filter.name == 'all'
                .filter.on(class='filter_' + filter.name,data-copy=filter.copy) #{filter.name}
              else
                .filter(class='filter_' + filter.name,data-copy=filter.copy) #{filter.name}
          .clear


    // PROJECT PAGES
    - var project = data.project.threedr

    .project.project_threedr.off
      include _header
      .body
        include threedr
