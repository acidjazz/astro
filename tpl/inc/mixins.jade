
mixin pimg(folder, image, padding)
  if padding == undefined || padding == ''
    - padding = 'both'
  .image(class='pad_' + padding)
    .img(style='background-image: url(../img/project/'+folder+'/1440/'+image+');')
    //img(src='../img/project/'+folder+'/'+image)

mixin bimg(folder, image, padding)
  if padding == undefined || padding == ''
    - padding = 'both'
  .image(class='pad_' + padding)
    .img(style='background-image: url(../img/blog/'+folder+'/1440/'+image+');')
    //img(src='../img/project/'+folder+'/'+image)

mixin bimages(folder, image1, image2)
  .images
    +bimg(folder, image1)
    +bimg(folder, image2)
    .clear

mixin youtube(id)
  .youtube
    iframe(
      width="800",
      height="450",
      src="https://www.youtube.com/embed/" + id,
      frameborder="0",
      allowfullscreen)
