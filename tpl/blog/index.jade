
extends ../inc/layout

block variables
  - var rootdir = '../'

block content
  include ../inc/top

  .blog

    // BLOG SUMMARY
    .summary.off
      .hero
        .copy1 &nbsp;
        .copy2  Astro Blog
      .crumb.off
        .close &#10005;
        .copy 
          span.desc Filtering by 
          span.value FILTER
        .clear
      .thumbs
        each entry in data.blog
          .thumb.on(
            class='thumb_' + entry.folder,
            data-entry=entry.folder,
            data-tags=entry.tags
            data-author=entry.author
            data-cdate=entry.cdate
          )
            .inner(
              style='background-image: url(../img/blog/' + entry.folder + '/1440/' + entry.cover + ');',
            )
              .bg
                .copy
                  .name #{entry.name}
                  .filters !{entry.tags.join('&nbsp;&nbsp;/&nbsp;&nbsp;')}
      .clear

